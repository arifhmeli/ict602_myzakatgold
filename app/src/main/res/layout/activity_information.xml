<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rose"
    tools:context=".Information">

  <include
      android:id="@+id/toolbar"
      layout="@layout/toolbar" />

  <ImageView
      android:id="@+id/imageView4"
      android:layout_width="266dp"
      android:layout_height="240dp"
      android:layout_marginStart="73dp"
      android:layout_marginTop="16dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/toolbar"
      app:srcCompat="@drawable/aboutus" />

  <TextView
      android:id="@+id/textView7"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="19dp"
      android:fontFamily="@font/source_sans_pro_bold"
      android:text="What is Zakat?"
      android:textColor="#DAC09B"
      android:textSize="24sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView4" />

  <TextView
      android:id="@+id/textView23"
      android:layout_width="371dp"
      android:layout_height="116dp"
      android:layout_marginStart="14dp"
      android:layout_marginTop="14dp"
      android:fontFamily="@font/source_sans_pro"
      android:text="@string/zakat_info"
      android:textSize="14sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView7" />

  <TextView
      android:id="@+id/textView8"
      android:layout_width="366dp"
      android:layout_height="100dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="15dp"
      android:fontFamily="@font/source_sans_pro"
      android:text="@string/zakatgold_info"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView22" />

  <TextView
      android:id="@+id/textView22"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="14dp"
      android:layout_marginTop="23dp"
      android:fontFamily="@font/source_sans_pro_black"
      android:text="Uruf Zakat on Gold Jewellery in Malaysia"
      android:textSize="20sp"
      android:textColor="#DAC09B"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView23" />


</androidx.constraintlayout.widget.ConstraintLayout>