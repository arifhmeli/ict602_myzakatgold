<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zakatapp.myzakat" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyZakat" >
        <activity
            android:name=".Information"
            android:exported="false"
            android:label="@string/information_page"/>
        <activity
            android:name=".Help"
            android:exported="false"
            android:label="@string/help_page" />
        <activity
            android:name=".AboutUs"
            android:exported="false"
            android:label="@string/aboutus_page" />
        <activity
            android:name=".ZakatCalculator"
            android:exported="false"
            android:label="@string/calculator_page"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>